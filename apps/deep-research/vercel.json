{
  "framework": "nextjs",
  "buildCommand": "cd ../.. && turbo run build --filter=deep-research",
  "devCommand": "cd ../.. && turbo run dev --filter=deep-research",
  "installCommand": "pnpm install",
  "outputDirectory": ".next",
  "github": {
    "silent": true
  },
  "functions": {
    "src/app/api/**/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/sse/**/route.ts": {
      "maxDuration": 900
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/api/sse/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        },
        {
          "key": "Connection",
          "value": "keep-alive"
        }
      ]
    }
  ]
}
